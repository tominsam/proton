<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_foreground" />
        </shape>
    </item>

    <item android:state_activated="true">
        <layer-list>
            <item android:top="4dp" android:left="4dp" android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/hilight" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_background" />
                    <stroke android:color="@color/dark_foreground" android:width="1dp" />
                </shape>
            </item>
            <item android:left="10dp" android:right="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_background" />
                    <stroke android:color="@color/light_background" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
